{
    "compilerOptions": {
        "module": "commonjs",                                
        "target": "es2021",                                  
        "outDir": "dist",
        "allowJs": true,
        "esModuleInterop": true,                             
        "forceConsistentCasingInFileNames": true,      
        "declaration": true,
        "strict": true,                                      
        "skipLibCheck": true                                 
    },
    "include": [
        "src/**/*"
    ]
}
