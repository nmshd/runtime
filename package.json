{
    "name": "monorepo",
    "private": true,
    "description": "The enmeshed Monorepo.",
    "homepage": "https://enmeshed.eu",
    "license": "AGPL-3.0-or-later",
    "author": "j&s-soft AG",
    "workspaces": [
        "packages/core-types",
        "packages/transport",
        "packages/content",
        "packages/consumption",
        "packages/runtime-types",
        "packages/runtime",
        "packages/app-runtime"
    ],
    "scripts": {
        "build:node": "tsc --build",
        "build:watch": "tsc --build -w",
        "postinstall": "patch-package && echo 'Postinstall done.'",
        "lint": "npm run lint:eslint && npm run lint:prettier && npm run lint:tsc",
        "lint:eslint": "eslint",
        "lint:prettier": "prettier --check .",
        "lint:tsc": "npm run --workspaces lint:tsc",
        "outdated": "ncu -i && ncu -i --workspaces",
        "start:backbone": "docker compose -f .dev/compose.backbone.yml up -d --wait",
        "start:openid4vc": "docker compose -f .dev/compose.openid4vc.yml up -d --wait",
        "teardown:backbone": "docker compose -f .dev/compose.backbone.yml down -v",
        "teardown:openid4vc": "docker compose -f .dev/compose.openid4vc.yml down -v",
        "test:teardown": "docker compose -f .dev/compose.yml down -fsv"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.28.5",
        "@babel/preset-typescript": "^7.28.5",
        "@js-soft/eslint-config-ts": "^2.0.4",
        "@js-soft/license-check": "^1.0.10",
        "@types/jest": "^30.0.0",
        "@types/node": "^24.10.9",
        "enhanced-publish": "^1.1.7",
        "eslint": "^9.39.2",
        "jest": "^30.2.0",
        "jest-expect-message": "^1.1.3",
        "madge": "^8.0.0",
        "npm-check-updates": "^19.3.1",
        "patch-package": "^8.0.1",
        "prettier": "^3.8.1",
        "ts-jest": "^29.4.6",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.9.3"
    }
}
